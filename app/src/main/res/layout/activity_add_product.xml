<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".ui.activity.AddProductActivity">

    <!-- Changed icon to a to-do list icon -->
    <ImageView
        android:id="@+id/passwordIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_checklist_24"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <!-- Changed title to reflect a to-do app -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your To-Do"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <!-- Changed hint to reflect a to-do title -->
    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="To-Do Title"
        android:inputType="text"
        android:padding="15dp" />

    <!-- Changed hint to reflect a to-do description -->
    <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Description"
        android:inputType="text"
        android:padding="15dp" />

    <!-- Changed hint to reflect a to-do note or additional details -->
    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Additional Notes"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:padding="15dp" />

    <!-- Changed button text to reflect saving a to-do -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:text="Save To-Do"
        android:backgroundTint="#4F46E5"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="4dp" />
</LinearLayout>