<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Updated title with better spacing and typography -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Your Password?"
        android:textColor="#1F2937"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Updated email input field with modern styling -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgotPasswordEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="#1F2937"
            android:textColorHint="#9CA3AF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Updated button with rounded corners and better spacing -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Send Reset Link"
        android:backgroundTint="#4F46E5"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:outlineProvider="background"
        android:background="@drawable/rounded_button" />

    <!-- Updated redirect text with better typography (no arrow icon) -->
    <TextView
        android:id="@+id/loginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember your password? Login"
        android:textColor="#4F46E5"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02" />
</androidx.appcompat.widget.LinearLayoutCompat>